<div class = "container">	
	<div class = "row">
		<h1>Перечень предметов</h1>
		<table class = "table table-condensed">
			<thead>
				<tr>
					<th class = "col-sm-1">ID</th>
					<th class = "col-sm-11">Name</th>
				</tr>
			</thead>
			<tbody>
				<% @disciplines.each do |d| %>
					<tr>
						<td><%= d.id %></td>
						<td><%= d.name %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<%= link_to("Add", new_discipline_path , class: "btn btn-default active") %>
	</div>
</div>